<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="StarMap.Views.SettingsPage">

  <StackLayout Padding="10">
    <!-- TODO: create a custom template for this -->
    <Label Text="Coordinates" FontAttributes="Bold" FontSize="Large"/>
    <StackLayout Orientation="Horizontal" >
      <Button Command="{Binding UpdateLocationCommand}" Image="refresh.png" HeightRequest="50" WidthRequest="50" />      
      <Label Text="Lat:" />
      <Label Text="{Binding GeoPosition.Latitude}" />
      <Label Text="Long:" />
      <Label Text="{Binding GeoPosition.Longitude}" />
      <ActivityIndicator IsRunning="{Binding IsBusy}" />
    </StackLayout>
  </StackLayout>
  
</ContentPage>